<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Questions.ui.main.PlaceholderFragment">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="If you lose your job do you know\nwhere to look for ?"
                            android:fontFamily="@font/noto_sans_bold"
                            android:textSize="15sp"
                            android:layout_marginStart="20dp"
                            android:layout_marginVertical="20dp"
                            android:textColor="@color/black"
                            android:layout_weight="3"></TextView>

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/where_to_go_switch"
                            android:layout_marginVertical="20dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_weight="2"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Do you want to go back and work or migrate for work once the lockdown is lifted ?"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/lockdown_support_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What is your livelihood plan after lockdown in the local area?"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/skill_upgrade_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="20dp"
                        android:layout_marginHorizontal="20dp"
                        />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="If you want to pursue daily wage or farming or traditional work in local area what support do you need ? "
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/training_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Any other please specify"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/other_avaibility"
                        android:hint="(please specify here)"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:inputType="text"
                        android:autofillHints=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:backgroundTint="@color/blue"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textColorHint="@color/gray"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="If you want to start business or group enterprise in local area what support need? "
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/livelihhod_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Any other please specify"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/other_livelihood"
                        android:hint="(please specify here)"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:inputType="text"
                        android:autofillHints=""
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:backgroundTint="@color/blue"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textColorHint="@color/gray"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="If you wish to migrate, when do you plan to do so? "
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/migrateplan"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"
                        android:layout_marginHorizontal="20dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What kind of support do you need to migrate? (same city or any other)?"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/migratesupport"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"
                        android:layout_marginHorizontal="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Any other please specify"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/other_support"
                        android:hint="(please specify here)"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:inputType="text"
                        android:autofillHints=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:backgroundTint="@color/blue"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textColorHint="@color/gray"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Any other comments/recommendation that you would like to share. Here please"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/comment"
                        android:hint="(please specify here)"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:inputType="text"
                        android:autofillHints=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:backgroundTint="@color/blue"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textColorHint="@color/gray"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <Button
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:text="Save"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/noto_sans_bold"
                    android:background="@drawable/button"
                    android:textSize="15sp"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/save_plan"/>


            </androidx.cardview.widget.CardView>







        </LinearLayout>


    </ScrollView>

</LinearLayout>