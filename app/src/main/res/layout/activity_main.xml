                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/noto_sans_bold"
                    android:text="Rescue &amp; Relief (COVID-19)"
                    android:textColor="@color/black"
                    android:textSize="15sp"></TextView>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/meal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:paddingHorizontal="30dp"
                                android:paddingTop="30dp"
                                android:src="@drawable/meal"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans"
                                android:text="Happy\nMeal"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp"></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:paddingHorizontal="30dp"
                                android:paddingTop="30dp"
                                android:src="@drawable/emergency"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans"
                                android:text="Casualty"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp"></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:paddingHorizontal="30dp"
                                android:paddingTop="30dp"
                                android:src="@drawable/support"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans"
                                android:text="Clear\nthe Tear"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp"></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:paddingHorizontal="30dp"
                                android:paddingTop="30dp"
                                android:src="@drawable/car"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans"
                                android:text="Enroute\ncare"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp"></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:paddingHorizontal="30dp"
                                android:paddingTop="30dp"
                                android:src="@drawable/saftey"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans"
                                android:text="Safe\nGhar"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp"></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:paddingHorizontal="30dp"
                                android:paddingTop="30dp"
                                android:src="@drawable/donet"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans"
                                android:text="Contribute"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp"></TextView>
                        </LinearLayout>


                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>



        </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card1"
            android:layout_marginVertical="10dp"
            android:id="@+id/card2"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
