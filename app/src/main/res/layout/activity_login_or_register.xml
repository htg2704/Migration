<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.migration.Register.LoginOrRegister"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Sign In"
       android:fontFamily="@font/noto_sans_bold"
       android:textSize="35sp"
       android:layout_marginVertical="20dp"
       android:layout_marginStart="30dp"
       android:textColor="@color/blue"
       ></TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/log_mail"
        android:hint="E-mail Address"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/noto_sans"
        android:inputType="text"
        android:autofillHints=""
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:background="@drawable/btn_draw1"
        android:drawablePadding="15dp"
        android:textCursorDrawable="@drawable/cursor"
        android:textColorHint="@color/gray"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="25dp"
        android:id="@+id/log_pwd"
        android:hint="Password"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/noto_sans"
        android:inputType="text"
        android:autofillHints=""
        android:textColor="@color/black"
        android:textSize="15sp"
        android:drawableLeft="@drawable/ic_lock_open_black_24dp"
        android:background="@drawable/btn_draw1"
        android:drawablePadding="15dp"
        android:textCursorDrawable="@drawable/cursor"
        android:textColorHint="@color/gray"
        />



        <TextView
            android:id="@+id/tv_forgotpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password ?"
            android:fontFamily="@font/noto_sans_bold"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_gravity="end"
            android:textColor="@color/gray"></TextView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="@color/white"
        android:fontFamily="@font/noto_sans_bold"
        android:background="@drawable/button"
        android:textSize="15sp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btn_login"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="New User Register Here..."
    android:fontFamily="@font/noto_sans_bold"
    android:textAlignment="textEnd"
    android:layout_marginEnd="30dp"
    android:textColor="@color/gray"
    android:id="@+id/tv_reg"></TextView>


    </LinearLayout>


</LinearLayout>

