<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/white"
        app:itemTextColor="@color/blue"
        app:itemIconTint="@color/blue"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

<com.google.android.material.appbar.AppBarLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/app"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:fontFamily="@font/aclonica"
            android:text="@string/kutumb"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

</com.google.android.material.appbar.AppBarLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/app"
    android:layout_above="@id/bottom_navigation"
    android:background="@color/back">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/askb">

                <Button
                    android:layout_width="match_parent"
                    android:drawablePadding="10dp"
                    android:id="@+id/terms"
                    android:background="@drawable/contactbutton"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:drawableLeft="@drawable/ic_filter_none_black_24dp"
                    android:text="Legal, Terms and Conditions"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="13sp"
                    android:elevation="5dp"
                    android:textColor="@color/black"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_marginVertical="10dp"
                    android:textAllCaps="false"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content" />


            </LinearLayout>




            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@id/termb"
                android:layout_below="@+id/askb">

                <Button
                    android:layout_width="match_parent"
                    android:drawablePadding="10dp"
                    android:id="@+id/privacy"
                    android:background="@drawable/contactbutton"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:drawableLeft="@drawable/ic_security_black_24dp"
                    android:text="Privacy Policy"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:elevation="5dp"
                    android:layout_marginVertical="10dp"
                    android:textAllCaps="false"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@id/privacy"
                android:layout_below="@+id/termb">

                <Button
                    android:layout_width="match_parent"
                    android:drawablePadding="10dp"
                    android:id="@+id/faq"
                    android:background="@drawable/contactbutton"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                    android:text="About Us"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_marginVertical="10dp"
                    android:textAllCaps="false"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_below="@+id/privacy"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:text="Call us"
                    android:fontFamily="@font/noto_sans_bold"
                    android:background="@drawable/btn_draw2"
                    android:textSize="12sp"
                    android:id="@+id/call"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:textColor="@color/blue"
                    android:layout_marginVertical="20dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_width="wrap_content"
                    android:text="Mail us"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/noto_sans_bold"
                    android:background="@drawable/btn_draw2"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:layout_marginHorizontal="5dp"
                    android:paddingHorizontal="20dp"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:id="@+id/mail"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>


</RelativeLayout>