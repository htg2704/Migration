<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".Questions.ui.main.AwarenessFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="If you lose your job\n do you KNOW\n where to look for?"
                android:layout_marginTop="20dp"
                android:maxLines="10"
                android:textSize="20sp"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/where_to_go_switch"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:textOff="NO"
                android:textOn="YES"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Do you need any \n skills to get job?"
                android:layout_marginTop="20dp"
                android:maxLines="10"
                android:textSize="20sp"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/skill_switch"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:textOff="NO"
                android:textOn="YES"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="What support do you\n need after Lockdown?"
                android:textSize="20sp"
                android:maxLines="10"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:id="@+id/lockdown_support_spinner"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Are you aspiring \n to subscribe to\n safety net like\n ESI, low premium insurance? "
                android:layout_marginTop="20dp"
                android:maxLines="10"
                android:textSize="20sp"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/safety_switch"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:textOff="NO"
                android:textOn="YES"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="If individual is an \n urban poor,\n do they need a one\n stop information Centre?"
                android:layout_marginTop="20dp"
                android:maxLines="10"
                android:textSize="20sp"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/one_stop_switch"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:textOff="NO"
                android:textOn="YES"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Is the individual\n willing to work\n in distant place\n to ensure disposable income?"
                android:layout_marginTop="20dp"
                android:maxLines="10"
                android:textSize="20sp"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/distant_switch"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:textOff="NO"
                android:textOn="YES"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Does the individual\n seeks information about\n affordable housing in\n working place or state\n or country by agencies?"
                android:layout_marginTop="20dp"
                android:maxLines="10"
                android:textSize="20sp"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/housing_switch"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:textOff="NO"
                android:textOn="YES"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Does the migrant needs\n access to affordable\n health care facilities?"
                android:layout_marginTop="20dp"
                android:maxLines="10"
                android:textSize="20sp"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/healthcare_switch"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:textOff="NO"
                android:textOn="YES"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Does the worker\n needs affordable educational\n facilities for her/his\n children?"
                android:layout_marginTop="20dp"
                android:maxLines="10"
                android:textSize="20sp"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/school_switch"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:textOff="NO"
                android:textOn="YES"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Are you interested\n in upgrading\n your skill?"
                android:textSize="20sp"
                android:maxLines="10"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:id="@+id/skill_upgrade_spinner"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="If provided,\n When are you\n available for training?"
                android:textSize="20sp"
                android:maxLines="10"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:id="@+id/training_spinner"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="What option are\n you practicing at\n present for livelihood?"
                android:textSize="20sp"
                android:maxLines="10"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:id="@+id/livelihhod_spinner"
                />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/save_plan"
            android:layout_marginTop="20dp"
            android:text="Save"/>
    </LinearLayout>
</ScrollView>