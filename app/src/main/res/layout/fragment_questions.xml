<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Questions.ui.main.PlaceholderFragment">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                app:cardCornerRadius="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/name"
                        android:hint="@string/enter_name_here"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:inputType="text"
                        android:autofillHints=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:backgroundTint="@color/blue"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textColorHint="@color/gray"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"></TextView>


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/age_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gender"
                                android:fontFamily="@font/noto_sans_bold"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/black"></TextView>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RadioGroup
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_marginTop="10dp"
                                    android:buttonTint="@color/blue"
                                    android:id="@+id/gender"
                                    >



                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/noto_sans"
                                        android:text="@string/male"/>
                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/noto_sans"
                                        android:text="@string/female"/>
                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/noto_sans"
                                        android:text="@string/others"/>



                                </RadioGroup>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="60dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Caste"
                                android:fontFamily="@font/noto_sans_bold"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/black"></TextView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RadioGroup
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/caste"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginHorizontal="20dp"
                                    android:buttonTint="@color/blue"
                                    android:orientation="vertical"
                                    >



                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/noto_sans"
                                        android:text="@string/general"/>

                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/noto_sans"
                                        android:text="@string/obc"
                                        android:textSize="15sp" />

                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/noto_sans"
                                        android:text="@string/sc" />

                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/noto_sans"
                                        android:text="@string/st"/>
                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/noto_sans"
                                        android:text="@string/minority"/>



                                </RadioGroup>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"></TextView>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/enter_mobile_no_here"
                        android:id="@+id/mobile_no"
                        android:autofillHints=""
                        android:inputType="phone"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:backgroundTint="@color/blue"
                        android:ems="10"
                        android:maxLength="10"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textColorHint="@color/gray"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pin Code (Permanent Address)"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/enter_pin_code_here"
                        android:id="@+id/pin"
                        android:autofillHints=""
                        android:inputType="phone"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:backgroundTint="@color/blue"
                        android:maxLength="6"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textColorHint="@color/gray"
                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="City/District"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/city_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="20dp"
                        android:layout_marginHorizontal="20dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current maritial status"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/maritial_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Number of Dependents"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/no_of_dependent_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Education"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/education_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Goverment ID"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>



                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NREGA Job Card"
                        android:id="@+id/a1"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/noto_sans"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disability Certificate"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:id="@+id/a2"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAN Card"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:id="@+id/a3"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BOCW / Labour Card"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:id="@+id/a4"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:text="Ration Card"
                        android:id="@+id/a5"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:text="Bank Passbook"
                        android:id="@+id/a6"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:text="No Document"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/a7"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Any person within your\nfamily with any kind\ndisability ? "
                            android:fontFamily="@font/noto_sans_bold"
                            android:textSize="15sp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="20dp"
                            android:textColor="@color/black"
                            android:layout_weight="4"></TextView>

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pwd_switch"
                            android:layout_marginVertical="20dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_weight="1"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What are your skills(including special skills)?"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/skill"
                        android:hint="(DO NOT LEAVE THIS BLANK)"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:inputType="text"
                        android:autofillHints=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginBottom="30dp"
                        android:backgroundTint="@color/blue"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textColorHint="@color/gray"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <Button
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:text="Save and Next"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/noto_sans_bold"
                    android:background="@drawable/button"
                    android:textSize="12sp"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/save_personal"/>


            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </ScrollView>

</LinearLayout>