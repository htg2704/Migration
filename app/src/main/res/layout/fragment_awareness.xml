<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Questions.ui.main.PlaceholderFragment">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How did you came to know about COVID19?"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/gray"></TextView>


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/covid_know_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How did you came know about Country wide Lockdown"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/lockdown_know_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="COVID19 Self assessment (As per Government's Aarogya Setu App)"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/self_assessment_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="10dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Are you aware of Govt. benefits ?"
                            android:fontFamily="@font/noto_sans_bold"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/gray"></TextView>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cooked Food/Ration"
                            android:id="@+id/c1"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/noto_sans"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Health check up and treatment"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/noto_sans"
                            android:id="@+id/c2"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Govt. financial support"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/noto_sans"
                            android:id="@+id/c3"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Education for children"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/noto_sans"
                            android:id="@+id/c4"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/noto_sans"
                            android:text="Ration/PDS"
                            android:id="@+id/c5"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/noto_sans"
                            android:text="Any other"
                            android:layout_marginBottom="20dp"
                            android:id="@+id/c6"/>



                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Where are you now?"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/where_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What support you have received?"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/support_received_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Response of your company Employer Contractor"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/employer_response_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What support do you need"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health check up and treatment"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:id="@+id/c7"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Govt. financial support"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:id="@+id/c8"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Education for children"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:id="@+id/c9"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:text="Ration/PDS"
                        android:id="@+id/c10"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/noto_sans"
                        android:text="Any other"
                        android:id="@+id/c11"/>
                </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Whom do you need to reach for any support on Corona?"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/support_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        />

                    <Button
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:text="Save and Next"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/noto_sans_bold"
                        android:background="@drawable/button"
                        android:textSize="12sp"
                        android:layout_marginVertical="30dp"
                        android:id="@+id/save_awareness"/>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>