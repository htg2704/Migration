<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back">

    <com.google.android.material.appbar.AppBarLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/app"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal">



            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_24dp"
                android:background="@null"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="15dp"
                android:id="@+id/btn"></ImageButton>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/aclonica"
                android:layout_weight="4"
                android:text="@string/kutumb"
                android:textColor="@color/blue"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/power_24dp"
                android:background="@null"
                android:layout_marginTop="15dp"
                android:id="@+id/btn_logout"></ImageButton>

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        android:weightSum="3">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:elevation="4dp"
            android:id="@+id/btn_register"
            android:layout_marginEnd="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/register"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:layout_weight="2"
                    >
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/noto_sans"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"
                    ></TextView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:elevation="4dp"
            android:id="@+id/bulk"
            android:layout_marginEnd="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bulk"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2"
                    >
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add\nBulk Data"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/noto_sans"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"
                    ></TextView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:elevation="4dp"
            android:layout_weight="1">


        </androidx.cardview.widget.CardView>



    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:weightSum="3">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:elevation="4dp"
                android:layout_weight="1">


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:elevation="4dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/download"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/download"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2"
                        >
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Download\nBulk Data\nFormat"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/noto_sans"
                        android:textAlignment="center"
                        android:layout_marginBottom="10dp"
                        ></TextView>



                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:elevation="4dp"
                android:id="@+id/upload"
                android:layout_marginEnd="10dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/upload"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2"
                        >
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload\nBulk Data\nFile"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/noto_sans"
                        android:textAlignment="center"
                        android:layout_marginBottom="10dp"
                        ></TextView>



                </LinearLayout>


            </androidx.cardview.widget.CardView>




        </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:background="@color/back"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                            <Button
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:id="@+id/buttonChoose"
                    android:background="@drawable/sign"
                   />
                    <Button
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:id="@+id/buttonUpload"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/buttonChoose"
                        android:background="@drawable/done"
                        />
                        </RelativeLayout>


                </LinearLayout>
    </LinearLayout>

</RelativeLayout>