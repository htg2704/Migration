<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.migration.Register.LoginOrRegister"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Sign In"
       android:fontFamily="@font/noto_sans_bold"
       android:textSize="35sp"
       android:layout_marginVertical="20dp"
       android:layout_marginStart="30dp"
       android:textColor="@color/blue"
       ></TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/log_mail"
        android:hint="E-mail Address"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/noto_sans"
        android:inputType="text"
        android:autofillHints=""
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:background="@drawable/btn_draw1"
        android:drawablePadding="15dp"
        android:textCursorDrawable="@drawable/cursor"
        android:textColorHint="@color/gray"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="25dp"
        android:id="@+id/log_pwd"
        android:hint="Password"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/noto_sans"
        android:inputType="text"
        android:autofillHints=""
        android:textColor="@color/black"
        android:textSize="15sp"
        android:drawableLeft="@drawable/ic_lock_open_black_24dp"
        android:background="@drawable/btn_draw1"
        android:drawablePadding="15dp"
        android:textCursorDrawable="@drawable/cursor"
        android:textColorHint="@color/gray"
        />



        <TextView
            android:id="@+id/tv_forgotpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password ?"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/noto_sans_bold"
            android:layout_gravity="end"
            android:textColor="@color/gray"></TextView>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button"
            android:fontFamily="@font/noto_sans_bold"
            android:text="Sign In"
            android:textColor="@color/white"
            android:textSize="15sp" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="New User Register Here..."
    android:fontFamily="@font/noto_sans_bold"
    android:textAlignment="textEnd"
    android:layout_marginEnd="30dp"
    android:textColor="@color/gray"
    android:id="@+id/tv_reg"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="or signup with"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="18sp"
            android:fontFamily="@font/noto_sans"
            android:layout_marginTop="50dp"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="110dp"
            android:weightSum="3" >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/facebook"></ImageView>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/google"></ImageView>

            <ImageView
                android:id="@+id/mobauth"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_phone_black_24dp"
                android:layout_weight="1"
                ></ImageView>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/fb_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <com.google.android.gms.common.SignInButton
            android:layout_marginTop="5dp"
            android:id="@+id/g_sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>

