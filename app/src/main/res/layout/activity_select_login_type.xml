<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.migration.Register.select_login_type"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/ll1"
        android:gravity="center">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please tell us who you are!"
            android:textSize="22sp" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_vol"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ll1"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_draw1"
        android:layout_marginLeft="68dp"
        android:layout_marginRight="68dp"
        android:text="Volunteer"
        android:textColor="@color/pink">

    </Button>

    <Button
        android:id="@+id/btn_cmob"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/btn_vol"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:textColor="@color/pink"
        android:background="@drawable/btn_draw1"
        android:text="Community Mobiliser">

    </Button>
    <Button
        android:id="@+id/btn_ngo"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/btn_cmob"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:textColor="@color/pink"
        android:background="@drawable/btn_draw1"
        android:text="Agency/NGOs">
    </Button>


</RelativeLayout>