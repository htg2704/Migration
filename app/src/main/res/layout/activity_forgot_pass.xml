<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register.ForgotPass">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_lock_black_24dp"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Forgot Passward ?"
        android:layout_marginTop="10dp"
        android:textColor="@color/blue"
        android:fontFamily="@font/noto_sans_bold"
        android:textSize="22sp"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="We just need your rejistered email address to send you passward reset"
        android:textColor="@color/gray"
        android:layout_marginHorizontal="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/noto_sans"
        android:textSize="15sp"
        ></TextView>

    <EditText
        android:id="@+id/usreml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="E-mail Address"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="@font/noto_sans"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:background="@drawable/btn_draw1"
        android:drawablePadding="15dp"
        android:textCursorDrawable="@drawable/cursor"
        android:textColorHint="@color/gray"
        android:padding="15dp"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btnForgotPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/noto_sans_bold"
        android:background="@drawable/button"
        android:textSize="15sp"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:text="Reset Password" />

</LinearLayout>