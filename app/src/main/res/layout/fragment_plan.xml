<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Questions.ui.main.PlaceholderFragment">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="If you lose your job do you know\nwhere to look for ?"
                            android:fontFamily="@font/noto_sans_bold"
                            android:textSize="15sp"
                            android:layout_marginStart="20dp"
                            android:layout_marginVertical="20dp"
                            android:textColor="@color/black"
                            android:layout_weight="3"></TextView>

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/where_to_go_switch"
                            android:layout_marginVertical="20dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_weight="2"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Do you need any skills to\nget job ?"
                            android:fontFamily="@font/noto_sans_bold"
                            android:textSize="15sp"
                            android:layout_marginStart="20dp"
                            android:layout_marginVertical="20dp"
                            android:textColor="@color/black"
                            android:layout_weight="3"></TextView>

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/skill_switch"
                            android:layout_marginVertical="20dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_weight="2"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Are you aspiring to subscribe to\nsafety net like ESI,\nlow premium insurance ? "                            android:fontFamily="@font/noto_sans_bold"
                            android:textSize="15sp"
                            android:layout_marginStart="20dp"
                            android:layout_marginVertical="20dp"
                            android:textColor="@color/black"
                            android:layout_weight="4"></TextView>

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/safety_switch"
                            android:layout_marginVertical="20dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_weight="1"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="If individual is an urban poor,\ndo they need a one stop\ninformation Centre ?"
                            android:fontFamily="@font/noto_sans_bold"
                            android:textSize="15sp"
                            android:layout_marginStart="20dp"
                            android:layout_marginVertical="20dp"
                            android:textColor="@color/black"
                            android:layout_weight="4"></TextView>

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/one_stop_switch"
                            android:layout_marginVertical="20dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_weight="1"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Is the individual willing to\nwork in distant place to ensure\ndisposable income ?"
                            android:fontFamily="@font/noto_sans_bold"
                            android:textSize="15sp"
                            android:layout_marginStart="20dp"
                            android:layout_marginVertical="20dp"
                            android:textColor="@color/black"
                            android:layout_weight="4"></TextView>

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/distant_switch"
                            android:layout_marginVertical="20dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_weight="1"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Does the individual seeks\ninformation about affordable\nhousing in working place or\nstate or country by agencies ?"
                            android:fontFamily="@font/noto_sans_bold"
                            android:textSize="15sp"
                            android:layout_marginStart="20dp"
                            android:layout_marginVertical="20dp"
                            android:textColor="@color/black"
                            android:layout_weight="4"></TextView>

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/housing_switch"
                            android:layout_marginVertical="20dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_weight="1"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Does the migrant needs\naccess to affordable health\ncare facilities ?"
                            android:fontFamily="@font/noto_sans_bold"
                            android:textSize="15sp"
                            android:layout_marginStart="20dp"
                            android:layout_marginVertical="20dp"
                            android:textColor="@color/black"
                            android:layout_weight="4"></TextView>

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/healthcare_switch"
                            android:layout_marginVertical="20dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_weight="1"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Does the worker needs\naffordable educational\nfacilities for her/his children?"
                            android:fontFamily="@font/noto_sans_bold"
                            android:textSize="15sp"
                            android:layout_marginStart="20dp"
                            android:layout_marginVertical="20dp"
                            android:textColor="@color/black"
                            android:layout_weight="4"></TextView>

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/school_switch"
                            android:layout_marginVertical="20dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_weight="1"
                            />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What support do you need after Lockdown ?"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/lockdown_support_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Are you interested in upgrading your skill ?"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/skill_upgrade_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="If provided,When are you available for training ?"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/training_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What option are you practicing at present for livelihood ?"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/gray"></TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/livelihhod_spinner"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="40dp"
                        android:layout_marginHorizontal="20dp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <Button
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/noto_sans_bold"
                    android:background="@drawable/button"
                    android:textSize="15sp"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/save_plan"/>


            </androidx.cardview.widget.CardView>







        </LinearLayout>


    </ScrollView>

</LinearLayout>